<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jjy.manager.mapper.ProductDetailsMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into product_details (
        id,
        product_id,
        image_urls,
        create_time,update_time,is_deleted
        ) values (
        #{id},
        #{productId},
        #{imageUrls},
        now(),
        now(),
        0
        )
    </insert>

    <!--根据商品id查询商品详情-->
    <resultMap id="productDetailsMap" type="com.jjy.model.entity.product.ProductDetails" autoMapping="true"></resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,product_id,image_urls,create_time,update_time,is_deleted
    </sql>

    <!--根据商品id查询商品详情-->
    <select id="selectByProductId" resultMap="productDetailsMap">
        select <include refid="columns" />
        from product_details
        where
        product_id = #{productId}
    </select>

    <!--根据商品id修改商品详情-->
    <update id="updateById" >
        update product_details set
        <if test="productId != null and productId != ''">
            product_id = #{productId},
        </if>
        <if test="imageUrls != null and imageUrls != ''">
            image_urls = #{imageUrls},
        </if>
        update_time =  now()
        where
        id = #{id}
    </update>

    <!--根据商品id删除商品详情-->
    <update id="deleteByProductId">
        update product_details set
        update_time = now() ,
        is_deleted = 1
        where
        product_id = #{productId}
    </update>

</mapper>